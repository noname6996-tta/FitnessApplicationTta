<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="200dp"
    android:layout_height="200dp"
    android:layout_margin="8dp"
    android:background="@drawable/bg_find_something_to_eat">

    <ImageView
        android:id="@+id/imgSomethingToEat"
        android:layout_width="120dp"
        android:layout_height="90dp"
        android:src="@drawable/ic_breafast"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvTimeSomethingToEat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/size_16dp"
        android:fontFamily="@font/poppins_semibold"
        android:text="Breakfast"
        android:textColor="@color/black"
        android:textSize="@dimen/size_14dp"
        app:layout_constraintBottom_toTopOf="@id/tvNumberSomethingToEat"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imgSomethingToEat" />

    <TextView
        android:id="@+id/tvNumberSomethingToEat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/size_16dp"
        android:fontFamily="@font/poppins_semibold"
        android:text="100+"
        android:textColor="@color/gray_hint"
        android:textSize="@dimen/size_14dp"
        app:layout_constraintBottom_toTopOf="@+id/appCompatButton3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvTimeSomethingToEat" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/appCompatButton3"
        android:layout_width="98dp"
        android:layout_height="30dp"
        android:layout_margin="@dimen/size_16dp"
        android:background="@drawable/bg_button_radius"
        android:fontFamily="@font/poppins"
        android:text="Select"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="@dimen/size_12dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>