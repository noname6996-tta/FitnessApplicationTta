<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <View
        android:id="@+id/viewBack"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_marginStart="@dimen/size_16dp"
        android:layout_marginTop="@dimen/size_16dp"
        android:background="@drawable/bg_view_gray_8"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_baseline_arrow_back_ios_new_24"
        app:layout_constraintBottom_toBottomOf="@+id/viewBack"
        app:layout_constraintEnd_toEndOf="@+id/viewBack"
        app:layout_constraintStart_toStartOf="@+id/viewBack"
        app:layout_constraintTop_toTopOf="@+id/viewBack" />

    <View
        android:id="@+id/viewInfo"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_margin="@dimen/size_16dp"
        android:background="@drawable/bg_view_gray_8"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/baseline_more_horiz_24"
        app:layout_constraintBottom_toBottomOf="@+id/viewInfo"
        app:layout_constraintEnd_toEndOf="@+id/viewInfo"
        app:layout_constraintStart_toStartOf="@+id/viewInfo"
        app:layout_constraintTop_toTopOf="@+id/viewInfo" />

    <TextView
        android:id="@+id/textView25"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins_semibold"
        android:text="@string/setting"
        android:textColor="@color/black"
        android:textSize="@dimen/text_size_16sp"
        app:layout_constraintBottom_toBottomOf="@+id/viewBack"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/viewBack" />

    <View
        android:id="@+id/viewPersonData"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="@dimen/size_16dp"
        android:layout_marginTop="32dp"
        android:layout_marginRight="@dimen/size_16dp"
        android:background="@drawable/bg_view_gray"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView25" />
    
    <TextView
        android:id="@+id/textView37"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/size_24dp"
        android:layout_marginLeft="@dimen/size_16dp"
        android:fontFamily="@font/poppins"
        android:gravity="center"
        android:text="@string/change_themes"
        android:textColor="@color/gray1"
        android:textSize="@dimen/text_size_14sp"
        app:layout_constraintBottom_toBottomOf="@+id/viewPersonData"
        app:layout_constraintStart_toStartOf="@id/viewPersonData"
        app:layout_constraintTop_toTopOf="@+id/viewPersonData" />

    <androidx.appcompat.widget.SwitchCompat
        android:id="@+id/switch1"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_marginRight="@dimen/size_16dp"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="@+id/viewPersonData"
        app:layout_constraintEnd_toEndOf="@+id/viewPersonData"
        app:layout_constraintTop_toTopOf="@+id/viewPersonData" />

    <View
        android:id="@+id/viewChangePassword"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_margin="16dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/bg_view_gray"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/viewPersonData" />

    <TextView
        android:id="@+id/textView38"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/size_24dp"
        android:layout_marginLeft="@dimen/size_16dp"
        android:fontFamily="@font/poppins"
        android:gravity="center"
        android:text="Change password"
        android:textColor="@color/gray1"
        android:textSize="@dimen/text_size_14sp"
        app:layout_constraintBottom_toBottomOf="@+id/viewChangePassword"
        app:layout_constraintStart_toStartOf="@id/viewChangePassword"
        app:layout_constraintTop_toTopOf="@+id/viewChangePassword" />
</androidx.constraintlayout.widget.ConstraintLayout>